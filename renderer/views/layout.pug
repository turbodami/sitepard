html
    include head
    body
        .section
            .columns   
                .column.is-2
                .column.is-8
                    nav.navbar
                        .navbar-brand
                            a.navbar-item(href='/')
                                img.image.is-2by1(src=logo)
                        .navbar-menu    
                            .navbar-start
                                a.navbar-item(href='') Menu
