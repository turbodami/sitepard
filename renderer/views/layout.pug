doctype html
html
    include head
    body
        nav.navbar.is-spaced.is-large
            .navbar-brand
                a(href='/')
                    if(logo)
                        img(src=logo width="200" height="28")
                    else
                        #{name}
                div.navbar-burger.burger(role='button', aria-label='menu', aria-expanded='false', onclick="document.querySelector('.navbar-menu').classList.toggle('is-active'); document.querySelector('.navbar-burger').classList.toggle('is-active');")
                    span(aria-hidden='true')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
            .navbar-menu  
                .navbar-start
                    a.navbar-item(href='#menu') Menu
                    a.navbar-item(href='#timetable') Orari
                    a.navbar-item(href='#address') Dove siamo
                .navbar-end.is-hidden-touch
                    .navbar-item
                    .buttons
                        a.button.is-primary(href=`https://wa.me/39${whatsappNumber}`) Ordina su Whatsapp
                        a.button.is-info(href=`tel:${tel}`) Chiama
        .section.is-medium
            .container
                .columns.is-centered
                    .column.is-half.has-text-centered-mobile
                        p.title.is-size-1-desktop.is-size-3-mobile Ordina online
                        p.subtitle.is-size-3-desktop.is-size-5-mobile #{description}               
                    .column.is-on-third.is-vcentered
                        figure.image.is-square
                            img.is-rounded(src=image)
        .section.is-medium.has-background-danger(id='menu')
            .container
                .columns.is-centered
                    .column.is-half.has-text-centered
                        p.title.is-size-1-desktop.is-size-2-mobile MENU'
                        br
            .container
                .columns.is-centered
                    .column.is-half.has-text-left
                        each category in categories
                            .box
                                p.is-size-3.is-uppercase.has-text-centered #{category.name}
                                br
                                each product in products
                                    if product.category === category.name
                                        p.is-size-4.has-text-weight-bold #{product.name} #{product.price}€
                                        p.subtitle.is-size-5 #{product.description}
                    
        .section.hero.is-white.is-small
            .hero-body
                .container
                    .columns.is-centered
                        .column.is-one-third.has-text-centered(name='timetable')
                            p.title.is-size-1-desktop.is-size-2-mobile(id='timetable') Orari
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Lunedì #{monday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Martedi #{tuesday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Mercoledi #{wednesday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Giovedi #{thursday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Venerdi #{friday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Sabato #{saturday}
                                p.subtitle.is-size-3-desktop.is-size-4-mobile Domenica #{sunday}
                        .column.is-one-third.has-text-centered(name='address')
                            p.title.is-size-1-desktop.is-size-2-mobile(id='address') Dove siamo
                                p.subtitle.is-size-3-desktop.is-size-4-mobile #{address}
        .section.hero.is-danger.is-small
            .hero-body
                .container
                    .columns.is-centered
                        .column.is-one-fifth.has-text-centered
                            p © 2020 Pizzeria Planet di Dal Dosso Federica P.IVA: 0000000000 Tutti i diritti riservati
        block content