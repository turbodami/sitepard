doctype html
html
    include head
    body
        nav.navbar.is-spaced.is-large
            .navbar-brand
                a.navbar-item(href='/')
                    if(logo)
                        img(src=logo)
                    else
                        #{name}
                a.navbar-burger(role='button', aria-label='menu', aria-expanded='false')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
            .navbar-menu    
                .navbar-start
                    a.navbar-item(href='#menu') Menu
                    a.navbar-item(href='#timetable') Orari
                    a.navbar-item(href='#address') Dove siamo
                .navbar-end
                    .navbar-item
                    .buttons
                        a.button.is-primary(href='https://wa.me/39#{whatsapp}') Ordina su Whatsapp
                        a.button.is-info(href='tel:#{tel}') Chiama
        .section.is-medium
            .container
                .columns.is-centered
                    .column.is-one-third
                        p.title.is-1 Ordina online
                        p.subtitle.is-3 #{description}               
                    .column.is-one-third
                        figure.image.is-rounded
                            img(src=image)
        .section.is-medium(name='menu')
            .container
                .columns.is-centered
                    .column.is-one-third.has-text-centered
                        p.title.is-1 Men√π
                        table.table
                            each category in categories
                                thead
                                    tr
                                        th= category.name
                                tbody
                                    each product in products
                                        if product.category === category.name
                                            tr
                                                td= product.name
                                                td= product.description
                                                td= product.price
        .section.hero.is-warning.is-medium
            .hero-body
                .container
                    .columns.is-centered
                        .column.is-one-third.has-text-centered(name='timetable')
                            p.title.is-1 Orari
                                p.subtitle.is-3 Lunedi #{timeTable.monday}
                                p.subtitle.is-3 Martedi #{timeTable.tuesday}
                                p.subtitle.is-3 Mercoledi #{timeTable.wednesday}
                                p.subtitle.is-3 Giovedi #{timeTable.thursday}
                                p.subtitle.is-3 Venerdi #{timeTable.friday}
                                p.subtitle.is-3 Sabato #{timeTable.saturday}
                                p.subtitle.is-3 Domenica #{timeTable.sunday}
                        .column.is-one-third.has-text-centered(name='address')
                            p.title.is-1 Dove siamo
                                p.subtitle.is-3 #{address}
        .section.hero.is-info.is-small
            .hero-body
                .container
                    .columns.is-centered
                        .column.is-one-fifth.has-text-centered
