doctype html
html
    include head
    body
        .section
            .columns   
                .column.is-2
                .column.is-8
                    nav.navbar
                        .navbar-brand
                            a.navbar-item(href='/') #{name}
                        .navbar-menu
                            .navbar-start
                                a.navbar-item(href='') Menu
                                a.navbar-item(href='') Orari
                                a.navbar-item(href='') Dove siamo
                            .navbar-end
                                .navbar-item
                                .buttons
                                    a.button.is-primary(href='') Ordina su Whatsapp
                                    a.button.is-info(href='') Chiama
                .column.is-2
        .section
            .container
                .columns.is-vcentered.is-desktop
                    .column.is-2
                    .column.is-4
                        p.title.is-1 Ordina online
                        p.subtitle.is-3 #{description}               
                    .column.is-4
                        img.image(src='#{image}')
                    .column.is-2
        .section
            .container
                .columns.is-vcentered.is-desktop
                    .column.is-4
                    .column.is-4
                        p.title.is-1 Men√π
                        table.table
                            each category in categories
                                thead
                                    tr
                                        th= category.name
                                tbody
                                    each product in products
                                        if product.category === category.name
                                            tr
                                                td= product.name
                                                td= product.description
                                                td= product.price

                    .column.is-4
        .section.hero.is-info.is-large
            .hero-body
                .container
                    .columns.is-vcentered.is-desktop
                        .column.is-2
                        .column.is-4.has-text-centered
                            p.title.is-1 Orari
                                p.subtitle.is-3.has-text-weight-bold Lunedi 
                                p.subtitle.is-3.has-text-weight-bold Martedi
                                p.subtitle.is-3.has-text-weight-bold Mercoledi
                                p.subtitle.is-3.has-text-weight-bold Giovedi
                                p.subtitle.is-3.has-text-weight-bold Venerdi
                                p.subtitle.is-3.has-text-weight-bold Sabato
                                p.subtitle.is-3.has-text-weight-bold Domenica
                        .column.is-4.has-text-centered
                            p.title.is-1 Dove siamo
                                p.subtitle.is-3.has-text-weight-bold= address
                        .column.is-2


