                                    a.button.is-info(href='') Chiama
                .column.is-2
        .section
            .container
                .columns.is-vcentered.is-desktop
                    .column.is-2
                    .column.is-4
                        p.title.is-1 Ordina online
                        p.subtitle.is-3 #{description}               
                    .column.is-4
                        img.image.is-rounded(src=image)
                    .column.is-2
        .section
            .container
                .columns.is-vcentered.is-desktop
                    .column.is-4
                    .column.is-4
                        p.title.is-1 Men√π
                        table.table
                            each category in categories
                                thead
                                    tr
                                        th= category.name
                                tbody
                                    each product in products
                                        if product.category === category.name
                                            tr
                                                td= product.name
                                                td= product.description
                                                td= product.price

                    .column.is-4
        .section.hero.is-warning.is-medium
            .hero-body
                .container
                    .columns.is-desktop
                        .column.is-2
                        .column.is-4.has-text-centered
